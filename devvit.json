{
  "$schema": "https://developers.reddit.com/schema/config-file.v1.json",
  "name": "idle-post-rpg",  
  "post": {
    "dir": "dist/client",
    "entrypoints": {
      "default": {
        "entry": "index.html",
        "splash": {
          "title": "Idle Post RPG",
          "description": "Click to earn karma, unlock passive income, and compete on global leaderboards!",
          "image": "splash-bg.png",
          "button": "Start Playing"
        }
      }
    }
  },
  "server": {
    "dir": "dist/server",
    "entry": "index.cjs"
  },
  "media": {
    "dir": "assets"
  },
  "menu": {
    "items": [
      {
        "label": "Create Idle Post RPG",
        "description": "Start a new game post",
        "location": "subreddit",
        "forUserType": "moderator",
        "endpoint": "/internal/menu/post-create"
      }
    ]
  },
  "triggers": {
    "onAppInstall": "/internal/on-app-install"
  },
  "dev": {
    "subreddit": "idle_post_rpg_dev"
  }
}